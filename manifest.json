{

  "manifest_version": 2,
  "name": "FCopyrights",
  "version": "2.0",

  "description": "Store copyright infos of stock photos as text file with only two clicks.",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "permissions": [
    "tabs",
    "contextMenus",
    "downloads"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://stock.adobe.com/*images/*",
        "https://pixabay.com/*photos/*",
        "https://*.fotolia.com/id/*"
      ],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "scripts": ["fcopyrights.js"]
  }

}